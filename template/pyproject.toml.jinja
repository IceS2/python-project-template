[project]
name = "{{ project_name }}"
version = "0.0.1"
description = "{{ project_description }}"
readme = "README.md"
requires-python = "{{ python_version_requirement }}"
authors = [
  {name = "{{ owner }}"}
]

dependencies = [
]

{% if default_dev_dependencies %}
[project.optional-dependencies]
dev = [
  "nox==2023.4.22",
  "ruff==0.0.263",
  "pytest==7.3.1",
]
{%- endif %}

[build-system]
requires = ["setuptools", "setuptools-scm"]
build-backend = "setuptools.build_meta"

[tool.setuptools]
zip-safe = false

[tool.setuptools.packages.find]
where = ["src"]

[project.scripts]

{% if default_dev_dependencies %}
[tool.ruff]
select = ["E", "F", "I", "N", "C90", "D", "UP", "B", "A", "C4", "PT", "PTH", "SIM", "PL", "RUF"]
format = "grouped"

[tool.ruff.per-file-ignores]
"__init__.py" = ["F401"]

[tool.ruff.pydocstyle]
convention = "google"
{%- endif %}
